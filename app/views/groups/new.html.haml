.chat-group-form
  %h1
    新規チャットグループ
  .chat-group-form__field
    .chat-group-form__field--left
      %label.chat-group-form__field--left__label
        グループ名
    .chat-group-form__field--right
      %input.chat-group-form__field--right__input{name: "name", placeholder: "グループ名を入力してください", type: "text"}/
  .chat-group-form__field
    .chat-group-form__field--left
      %label.chat-group-form__field--left__label
        チャットメンバーを追加
    .chat-group-form__field--right
      %input.chat-group-form__field--right__input{placeholder: "追加したいユーザー名を入力してください"}/
  .chat-group-form__field
    .chat-group-form__field--left
      %label.chat-group-form__field--left__label
        チャットメンバー
    .chat-group-form__field--right
      .chat-group-form__field--right__chat-member-list
        %p.chat-group-form__field--right__chat-member-list__chat-member-name
          Yuna
      .chat-group-form__field--right__delete
        削除
  .chat-group-form__field
    .chat-group-form__field--left
    .chat-group-form__field--right
      %input.chat-group-form__field--right__action-btn{"data-disable-with": "登録する", name: "commit", type: "submit", value: "登録する"}/
